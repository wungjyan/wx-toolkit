.qr-box{
  width: 100%;
  height: 600rpx;
  border: 1px solid #aaa;
  box-sizing: border-box;
}
.qr-box .warning{
  height: 60rpx;
  line-height: 60rpx;
  text-align: center;
  margin-top: 270rpx;
  color: #aaa;

}
.input-row{
  margin-top: 200rpx;
}
.input-row input{
  width: 96%;
  margin: 0 auto 10rpx;
  border-bottom: 1px solid #aaa;
}
.input-row button{
  width: 70%;
  margin-top: 50rpx;
}

.tip{
  text-align: center;
  font-size: 14px;
  color: #666;
}